# Azure App Service Environment Configuration
# Copy these values to Azure Portal > App Service > Configuration > Application Settings

NODE_ENV=production
PORT=8080
WEBSITE_NODE_DEFAULT_VERSION=20.17.0
SCM_DO_BUILD_DURING_DEPLOYMENT=true

# Security
JWT_SECRET=MileSafe2024SuperSecureJWTSecretKeyForProduction32Chars
SESSION_SECRET=MileSafeSessionSecret2024

# Database (configure if using database)
# DB_HOST=your-azure-mysql-server.mysql.database.azure.com
# DB_USER=milesafe_admin@your-server-name
# DB_PASS=YourSecurePassword123!
# DB_NAME=milesafe
# DB_PORT=3306
# DB_SSL=true

# Feature Flags
ENABLE_DATABASE=false
ENABLE_AUTH=true
ENABLE_MOCK_MODE=true

# CORS Configuration
CORS_ORIGIN=*

# Azure specific settings
WEBSITE_TIME_ZONE=Eastern Standard Time
WEBSITE_RUN_FROM_PACKAGE=1
